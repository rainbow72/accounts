<%= form_with(model: @transaction, local: true, remote: true) do |f| %>

  <%= render "layouts/error_messages", model: f.object %>

  <div class="form-group">
    <%= f.label :tdate, "Date" %>
    <%= f.date_field :tdate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <%= f.select :category_id, @categories.pluck(:name, :id), { include_blank: true }, class: "form-control" %>
  </div>

  <script type="text/javascript">
    function sub_options(){
      $.ajax({
        url: "/interrock/subcategories",
        data: {category_id: $("#transaction_category_id").val()},
        dataType: "script",
        method: "get",
        success: function(data){}
      });
    };
    
    let text = document.getElementById("transaction_category_id");
    text.onchange = sub_options;
  </script>

  <div class="form-group">
    <%= f.label :subcategory_id, "Sub Category" %>
    <%= f.select :subcategory_id, @subcategories.pluck(:name, :id), { include_blank: true }, class: "form-control" %>
  </div>

  <div class="text-aligned-end">
    <%= link_to "Cancel", root_url, {class: "btn btn-primary"} %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>
