<%= form_with(model: @transaction, local: true) do |f| %>

  <%= render "layouts/error_messages", model: f.object %>

  <div class="form-group">
    <%= f.label :tdate, "Date" %>
    <%= f.date_field :tdate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), { include_blank: true}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :subcategory_id, "Sub Category" %>
    <%= f.select :subcategory_id, options_from_collection_for_select(Subcategory.all, :id, :name), { include_blank: true}, class: "form-control" %>
  </div>

  <div class="text-aligned-end">
    <%= link_to "Cancel", root_url, {class: "btn btn-primary"} %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>

<script>
  $(function() {
    $("#category_id").change(function() {
      $.get({
        url: "#interrock_subcategories_path", data: { category_id: $("category_id").has("option:selected").val() }
      });
    });
  });
</script>
