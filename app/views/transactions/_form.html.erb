<%= form_with(model: @transaction, local: true) do |f| %>

  <%= render "layouts/error_messages", model: f.object %>

  <div class="form-group">
    <%= f.label :tdate, "Date" %>
    <%= f.date_field :tdate, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category, "Category" %>
    <%= f.select :category, @categories, {id: "interrock_category"}, { include_blank: true } %>
  </div>

  <div class="form-group">
    <%= f.label :subcategory, "Sub Category" %>
    <%= f.select :subcategory, @subcategories, {id: "interrock_subcategory"}, { include_blank: true } %>
  </div>

  <div class="text-aligned-end">
    <%= link_to "Cancel", root_url, {class: "btn btn-primary"} %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $("#interrock_category").change(function() {
      var category_id = $("#interrock_category").val();
      $.get("<%= interrock_category_select_path %>",
        { category_id: category_id },
        function(data){ }
      );
    });
  });
</script>
